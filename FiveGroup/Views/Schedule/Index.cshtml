<div class="container col-12 tf">

    <table id="tb1" class="table table-striped anotherhover border-light ">
        <thead class="col-12">
            <tr class=" text-center tc2 row ts1 bg1">
                <th class="col-md-1">
                    序號
                </th>


                <th class="col-md-2">
                    醫院
                </th>


                <th class="col-md-1">
                    科別
                </th>


                <th class="col-md-1">
                    醫師
                </th>


                <th class="col-md-2">
                    起始時間
                </th>


                <th class="col-md-2">
                    結束時間
                </th>


                <th class="col-md-1">
                    是否顯示
                </th>

                <th class="col-md-2">
                    
                </th>

            </tr>
        </thead>
        <tbody class="col-12">
            @foreach (var item in Model.schedulesList)
            {

            <tr class="text-center tc row">
                <td class="col-md-1">
                    @Html.DisplayFor(modelItem => item.sn)
                </td>
                <td class="col-md-2">
                    @Html.DisplayFor(modelItem => item.hospital.hos_name)
                </td>
                <td class="col-md-1">
                    @Html.DisplayFor(modelItem => item.department.dep_name)
                </td>
                <td class="col-md-1">
                    @Html.DisplayFor(modelItem => item.doctor.doc_name)
                </td>
                <td class="col-md-2">
                    @Html.DisplayFor(modelItem => item.starttime)
                </td>
                <td class="col-md-2">
                    @Html.DisplayFor(modelItem => item.endtime)
                </td>
                <td class="col-md-1">
                    @if (item.s_display == false)
                    {
                    <h4><span class="badge badge-secondary">隱藏</span></h4>
                    }
                    else
                    {
                     <h4><span class="badge badge-success">顯示</span></h4>
                    }
                </td>
                <td class="col-md-2">

                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            功能選單
                        </button>
                        <div class="dropdown-menu bg-dark" aria-labelledby="dropdownMenuButton">
                            <div class="bg-dark text-center btn-lg">@Html.ActionLink("編輯", "Edit", "Schedule", new { id = item.sn }, new { @class = "btn btn-info btn-block glyphicon glyphicon-pencil", @style = "form-text" })</div>
                            <div class="bg-dark text-center btn-lg">@Html.ActionLink("刪除", "Delete", "Schedule", new { id = item.sn }, new { @class = "btn btn-danger btn-block glyphicon glyphicon-pencil", onclick = "return confirm('您確定要刪除嗎？')", @style = "form-text"})</div>

                            @*@Html.ActionLink("編輯", "Edit", "Schedule", new { id = item.sn }, new { @class = "btn btn-primary" })
                            @Html.ActionLink("刪除", "Delete", "Schedule", new { id = item.sn }, new { @class = "btn btn-danger", onclick = "return confirm('您確定要刪除嗎？')" })*@
                        </div>
                    </div>



                </td>

            </tr>

            }
        </tbody>
    </table>
</div>
