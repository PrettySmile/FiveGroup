
@{
	ViewBag.Title = "第五組登入首頁";
}
<h2>登入系統</h2>
<form class="form-horizontal" method="post" action="@Url.Action("Login","Home")">
	<div class="form-group">
		<label for="id" class="col-md-3">管理者帳號</label>
		<div class="col-md-9">
			<input id="id" name="id" type="text" class="form-control" />
		</div>
	</div>
	<div class="form-group">
		<label for="pwd" class="col-md-3">管理者密碼</label>
		<div class="col-md-9">
			<input id="pwd" name="pwd" type="password" class="form-control" />
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-9 col-md-offset-3">
			<input id="Submit1" type="submit" value="登入" class="btn btn-primary" />
			<input id="Reset1" type="reset" value="清空" class="btn btn-default" />
		</div>
	</div>
</form>
<h3 class="text-danger">@ViewBag.LoginErr</h3>
