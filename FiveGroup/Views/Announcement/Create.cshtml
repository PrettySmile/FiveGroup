


@{
    ViewBag.Title = "公告新增";
}

<h1>新增announcement</h1>
<form action="@Url.Action("Create")" method="post">
    <div class="form-group">
        <lable for="a_id">公告編號</lable>
        <input type="text" name="a_id" id="a_id" class="form-control"          required />
    </div>
    <div class="form-group">
        <lable for="a_date">西元 日期 時間</lable>
        <input type="text" name="a_date" id="a_date" class="form-control"      required />
    </div>
    <div class="form-group">
        <lable for="a_content">內容</lable>
        <input type="text" name="a_content" id="a_content" class="form-control" required />
    </div>
    <div class="form-group">
        <lable for="a_display">顯示</lable>
        <input type="text" name="a_display" id="a_display" class="form-control" required />
    </div>
    <input type="submit" value="新增" class="btn btn-warning" />

</form>

