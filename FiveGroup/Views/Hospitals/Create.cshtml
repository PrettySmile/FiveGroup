@model FiveGroup.Models.hospital

@{
    ViewBag.Title = "新增醫院資料";
}


<link href="~/Content/Assemblestyle sheet 01.css" rel="stylesheet" />

<h1 class="shadow p-3 col-4 offset-4 rounded text-lg-center tc tf"><strong>新增醫院列表</strong></h1>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container justify-content-center col-6">
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="input-group flex-wrap form-group">
                <div class="input-group-prepend tw">
                    <span class="input-group-text flex-fill justify-content-center">@Html.DisplayNameFor(model => model.hos_id)</span>
                </div>
                <input name="hos_id" class="form-control" id="hos_id" type="text" value="@ViewBag.hos_id" readonly>
            </div>


            <div class="input-group flex-wrap form-group">
                <div class="input-group-prepend tw">
                    <span class="input-group-text flex-fill justify-content-center">@Html.DisplayNameFor(model => model.hos_name)</span>
                </div>
                <input name="hos_name" class="form-control" placeholder="醫院中文名稱">
            </div>

            <div class="input-group flex-wrap form-group">
                <div class="input-group-prepend tw">
                    <span class="input-group-text flex-fill justify-content-center">@Html.DisplayNameFor(model => model.hos_eng_name)</span>
                </div>
                <input name="hos_eng_name" class="form-control" placeholder="醫院英文名稱">
            </div>

            <div class="input-group flex-wrap form-group">
                <div class="input-group-prepend tw">
                    <span class="input-group-text flex-fill justify-content-center">@Html.DisplayNameFor(model => model.hos_address)</span>
                </div>
                <input name="hos_address" class="form-control" placeholder="醫院地址">
            </div>

            <div class="input-group flex-wrap form-group">
                <div class="input-group-prepend tw">
                    <span class="input-group-text flex-fill justify-content-center" for="hos_display">@Html.DisplayNameFor(model => model.hos_display)</span>
                </div>
                <select class="custom-select" id="hos_display" name="hos_display">
                    <option selected>請選擇</option>
                    <option value="True">是</option>
                    <option value="False">否</option>
                </select>
            </div>

            <div class="input-group flex-wrap form-group">
                <div class="input-group-prepend tw">
                    <span class="input-group-text flex-fill justify-content-center">@Html.DisplayNameFor(model => model.hos_phone)</span>
                </div>
                <input name="hos_phone" class="form-control" placeholder="醫院電話">
            </div>

            <div class="input-group flex-wrap form-group">
                <div class="input-group-prepend tw">
                    <span class="input-group-text flex-fill justify-content-center">@*@Html.LabelFor(model => model.c_id, "城市")*@城市</span>
                </div>
                @Html.DropDownList("c_id", (IEnumerable<SelectListItem>)ViewBag.cityname, htmlAttributes: new { @class = "form-control" })
            </div>

            <div class="input-group flex-wrap form-group">
                <div class="input-group-prepend tw">
                    <span class="input-group-text flex-fill justify-content-center">@*@Html.LabelFor(model => model.d_id, "地區")*@地區</span>
                </div>
                @Html.DropDownList("d_id", (IEnumerable<SelectListItem>)ViewBag.d_id, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.d_id, "", new { @class = "text-danger" })
            </div>


            <br />

            <div class=" justify-content-center col-12 row">
                <div class="">
                    <input type="submit" value="儲存" class="btn btn-success btn-lg tf" style="font-size:20px" />
                </div>
                <br />
                <div class="">
                    @Html.ActionLink("返回前頁", "Index", new { @cityname = ViewBag.citynameID }, new { @class = "btn btn-primary btn-lg tf", @style = "font-size:20px" })
                </div>
            </div>
        </div>
    </div>
}
























