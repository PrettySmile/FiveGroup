@model IEnumerable<FiveGroup.Models.ingrediant>

@{
    ViewBag.Title = "Index";
}


<link href="~/Content/Assemblestyle sheet 01.css" rel="stylesheet" />



<h1 class="shadow p-3 col-4 offset-4 rounded text-lg-center tc tf"><strong>添加物列表</strong></h1>


<p class="text-right col-12 tf">
    @Html.ActionLink("新增資訊", "Create", null, new { @class = "btn btn-success", @style = "font-size:20px" })
</p>

<div class="container col-12 tf">

    <table id="tb1" class="table table-striped anotherhover border-light ">
        <thead class="col-12">
            <tr class=" text-center tc2 row ts1 bg1">
                <th class="col-md-1">
                    @Html.DisplayNameFor(model => model.ing_id)
                </th>


                <th class="col-md-1">
                    @Html.DisplayNameFor(model => model.ing_name)
                </th>


                <th class="col-md-1">
                    @Html.DisplayNameFor(model => model.ing_eng_name)
                </th>


                <th class="col-md-2">
                    @Html.DisplayNameFor(model => model.ing_category)
                </th>


                <th class="col-md-3">
                    @Html.DisplayNameFor(model => model.ing_restricted)
                </th>


                <th class="col-md-3">
                    @Html.DisplayNameFor(model => model.ing_limitation)
                </th>


                <th class="col-md-1"></th>



            </tr>
        </thead>
        <tbody class="col-12">
            @foreach (var item in Model)
            {

                <tr class="text-center tc row">
                    <td class="col-md-1">
                        @Html.DisplayFor(modelItem => item.ing_id)
                    </td>
                    <td class="col-md-1">
                        @Html.DisplayFor(modelItem => item.ing_name)
                    </td>
                    <td class="col-md-1">
                        @Html.DisplayFor(modelItem => item.ing_eng_name)
                    </td>
                    <td class="col-md-2 a">
                        @Html.DisplayFor(modelItem => item.ing_category)
                    </td>
                    <td class="col-md-3 a">
                        @Html.DisplayFor(modelItem => item.ing_restricted)
                    </td>
                    <td class="col-md-3 a">
                        @Html.DisplayFor(modelItem => item.ing_limitation)
                    </td>
                    <td class="col-md-1">

                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                功能選單
                            </button>
                            <div class="dropdown-menu bg-dark" aria-labelledby="dropdownMenuButton">
                                <div class="bg-dark text-center btn-lg">@Html.ActionLink("編輯", "Edit", new { id = item.ing_id }, new { @class = "btn btn-info btn-block glyphicon glyphicon-pencil", @style = "form-text" })</div>
                                <div class="bg-dark text-center btn-lg">@Html.ActionLink("明細", "Details", new { id = item.ing_id }, new { @class = "btn btn-warning btn-block glyphicon glyphicon-pencil", @style = "form-text" })</div>
                                <div class="bg-dark text-center btn-lg">@Html.ActionLink("刪除", "Delete", new { id = item.ing_id }, new { @class = "btn btn-danger btn-block glyphicon glyphicon-pencil", @style = "form-text" })</div>
                            </div>
                        </div>



                    </td>

                </tr>

            }
        </tbody>
    </table>
</div>
