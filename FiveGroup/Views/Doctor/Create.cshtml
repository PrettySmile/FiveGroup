@model FiveGroup.Models.doctor

@{
    ViewBag.Title = "Create";

}

<link href="~/Content/Assemblestyle sheet 01.css" rel="stylesheet" />

<h1 class="shadow p-3 col-4 offset-4 rounded text-lg-center tc tf"><strong>新增醫師</strong></h1>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container justify-content-center col-6">
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="input-group flex-wrap form-group">
                <div class="input-group-prepend tw">
                    <span class="input-group-text flex-fill justify-content-center">@Html.DisplayNameFor(model => model.doc_name)</span>
                </div>
                <input name="doc_name" class="form-control" placeholder="醫師名稱">
            </div>

            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text tw justify-content-center">@Html.DisplayNameFor(model => model.doc_history)</span>
                </div>
                <textarea class="form-control" name="doc_history" aria-label="With textarea" placeholder="醫師經歷"></textarea>
            </div>

            <br />

            <div class="input-group flex-wrap form-group">
                <div class="input-group-prepend tw">
                    <span class="input-group-text flex-fill justify-content-center" for="hos_display">@Html.DisplayNameFor(model => model.doc_display)</span>
                </div>
                <select class="custom-select" id="doc_display" name="doc_display">
                    <option selected>請選擇</option>
                    <option value="True">是</option>
                    <option value="False">否</option>
                </select>
            </div>

            <br />

            <div class=" justify-content-center col-12 row">
                <div class="">
                    <input type="submit" value="儲存" class="btn btn-success btn-lg tf" style="font-size:20px" />
                </div>
                <br />
                <div class="">
                    @Html.ActionLink("返回前頁", "Index", null, new { @class = "btn btn-primary btn-lg tf", @style = "font-size:20px" })
                </div>
            </div>
        </div>
    </div>
}


<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
