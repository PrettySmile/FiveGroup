<h1 class="shadow p-3 col-4 offset-4 rounded text-lg-center tc tf"><strong>編輯醫師</strong></h1>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container justify-content-center col-6">
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @*@Html.HiddenFor(model => model.doc_id)*@

            @*<div class="form-group hidden">
            @Html.LabelFor(model => model.doc_id, htmlAttributes: new { @class = "control-label col-md-2" })
