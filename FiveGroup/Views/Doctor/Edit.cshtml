            <div class="input-group flex-wrap form-group hidden">
                <div class="input-group-prepend tw">
                    <span class="input-group-text flex-fill justify-content-center" name="ing_id">@Html.DisplayNameFor(model => model.doc_id)</span>
                </div>
                @Html.EditorFor(model => model.doc_id, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>



            <div class="input-group flex-wrap form-group">
                <div class="input-group-prepend tw">
                    <span class="input-group-text flex-fill justify-content-center">@Html.DisplayNameFor(model => model.doc_name)</span>
                </div>
                <input name="doc_name" class="form-control" placeholder="醫師名稱" value="@Model.doc_name">
            </div>

            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text tw justify-content-center">@Html.DisplayNameFor(model => model.doc_history)</span>
                </div>
                <textarea class="form-control" name="doc_history" aria-label="With textarea">@Model.doc_history</textarea>
            </div>

            <br />

            <div class="input-group flex-wrap form-group">
                <div class="input-group-prepend tw">
                    <span class="input-group-text flex-fill justify-content-center" for="hos_display">@Html.DisplayNameFor(model => model.doc_display)</span>
                </div>
                <select class="custom-select" id="doc_display" name="doc_display">
                    <option selected>請選擇</option>
                    <option value="True">是</option>
                    <option value="False">否</option>
                </select>
            </div>

            <br />

            <div class=" justify-content-center col-12 row">
                <div class="">
                    <input type="submit" value="儲存" class="btn btn-success btn-lg tf" style="font-size:20px" />
                </div>
                <br />
                <div class="">
                    @Html.ActionLink("返回前頁", "Index", new { Page = Request.QueryString["page"] }, new { @class = "btn btn-primary btn-lg tf", @style = "font-size:20px" })
                </div>
            </div>
        </div>
    </div>
}






